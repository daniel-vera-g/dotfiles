# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
export ZSH_THEME="robbyrussell"

# TEST
# Uncomment the following line to enable command auto-correction.
# ENABLE_CORRECTION="true"

# Custom Plugins to load
plugins=(git node npm brew);

# User configuration

source $ZSH/oh-my-zsh.sh
# Syntax highlightning      
source ~/.oh-my-zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh  

# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.

#change directory shortcuts 
#change directory shortcuts 
alias dropbox='cd ~/Dropbox'
alias downloads='cd ~/Downloads'

#commands
alias ls='ls -a'
alias copy='pwd|pbcopy'
alias rm="rm -rf"
alias zshrc='code ~/.zshrc'
alias refresh="source ~/.zshrc"

# -------------------------------------------------------------------
# Git
# -------------------------------------------------------------------
alias ga='git add'
alias gp='git push'
alias gl='git log'
alias gs='git status'
alias gd='git diff'
alias gm='git commit -m'
alias gma='git commit -am'
alias gb='git branch'
alias gc='git checkout'
alias gra='git remote add'
alias grr='git remote rm'
alias gpu='git pull'
alias gcl='git clone'
alias gta='git tag -a -m'
alias gf='git reflog'
alias gmer='git merge'
alias gfr='git fetch -p && git rebase'

# Vagrant
alias wiki='cd ~/workspace/BestWikiPageOnThePlanet/'
alias vu='vagrant up'
alias vs='vagrant ssh'
alias wikiWeb='sh ~/workspace/wiki.sh'
alias wikiP='xdg-open ~/workspace/BestWikiPageOnThePlanet'
alias wikiS='sh ~/workspace/BestWikiPageOnThePlanet/start.sh'
alias wikiSt='sh ~/workspace/BestWikiPageOnThePlanet/stop.sh'

source ~/.oh-my-zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh  