{
	"extends": "airbnb-base",
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"mocha": true,
		"jquery": true
	},
	"rules": {
		"quotes": [
			2,
			"single",
			"avoid-escape"
		],
		"no-unused-vars": [
			1,
			{
				"vars": "local",
				"args": "none"
			}
		],
		"semi": [
			2,
			"always"
		],
		"linebreak-style": 0,
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": 0,
		"arrow-body-style": [
			"error", "always"
		],
		"complexity": [
			2,
			6
		],
		"max-len": [
			2,
			150
		],
		"max-statements-per-line": [
			2,
			{
				"max": 1
			}
		],
		"max-nested-callbacks": [
			2,
			2
		],
		"eqeqeq": 2,
		"no-var": 2,
		"prefer-const": 2,
		"max-lines": [
			2,
			300
		],
		"no-return-assign": 2,
		"no-param-reassign": 2,
		"array-callback-return": 2,
		"one-var": [
			"error",
			"never"
		]
	}
}
