[push]
	default = matching
[core]
	trustctime = false
	editor = nvim
	filemode = false
	excludesfile = ~/.gitignore_global
	autocrlf = input
[color]
	ui = true
[credential]
	helper = store
[merge]
	tool = vimdiff
[mergetool]
	keeptemporaries = false
	keepbackups = false
	prompt = false
	trustexitcode = false
[alias]
	last = log -1 --stat
	cp = cherry-pick
	co = checkout
	cl = clone
	ci = commit
	st = status -sb
	br = branch
	unstage = reset HEAD --
	dc = diff --cached
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
[user]
	email = danielveragi@gmail.com
	name = danielVg
	username = daniel-vera-g
	signingkey = CEBBD7D13F1E01E3
[oh-my-zsh]
	hide-status = 1
[commit]
	gpgsign = false
[tag]
	forceSignAnnotated = true
[gpg]
	program = gpg
