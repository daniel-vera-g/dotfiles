# -------------------------------------------------------------------
# Directory
# -------------------------------------------------------------------
alias dropbox='cd ~/Dropbox'
alias downloads='cd ~/Downloads'

# -------------------------------------------------------------------
# Notebook & Journaling
# -------------------------------------------------------------------
alias did="vim + 'normal Go' + 'r!date' ~/Dropbox/did.txt"
alias journal="cd ~/Dropbox/documents/journal"
alias notebook="cd ~/Dropbox/documents/notebook"


# -------------------------------------------------------------------
# Git
# -------------------------------------------------------------------
alias g="git"
alias gam='git add  . && git commit -m'
alias ga='git add'
alias gaa='git add .'
alias gap='git add -p'
alias gp='git push'
alias gl='git log'
alias wow='git log --all --graph --decorate --oneline --simplify-by-decoration'
alias gs='git status'
alias gd='git diff'
alias gm='git commit -m'
alias gma='git commit -am'
alias gmamend='git commit --amend'
alias gb='git branch'
alias gc='git checkout'
alias gcl='git checkout -'
alias gra='git remote add'
alias grr='git remote rm'
alias gpu='git pull'
alias gcl='git clone'
alias gta='git tag -a -m'
alias gf='git reflog'
alias gmer='git merge'
alias gfr='git fetch -p && git rebase'
alias gcontr='git shortlog -sn'
alias gl='git diff --shortstat "@{0 day ago}'
alias prune='git remote update --prune'

# -------------------------------------------------------------------
# Commands
# -------------------------------------------------------------------

alias ls='ls -a'
alias copy='pwd|pbcopy'
alias rr="rm -rf"
alias open="xdg-open"

# Bluetooth
alias sBlue="~/Desktop/automate/bluetooth/Sblue.sh"
alias killB="~/Desktop/automate/bluetooth/Kblue.sh"

# -------------------------------------------------------------------
# Shortcuts
# -------------------------------------------------------------------

alias _="sudo"
alias zshrc='vim ~/.zshrc'
alias hyper="vim ~/.hyper.js"
alias refresh="source ~/.zshrc"
alias vimrc="vim ~/.vimrc"
alias reload="source ~/.zshrc"

# -------------------------------------------------------------------
# Default options
# -------------------------------------------------------------------

alias rsync="rsync -vh"
alias json="json -c"
alias psgrep="psgrep -i"
alias x+="chmod +x"

# -------------------------------------------------------------------
# Global aliases
# -------------------------------------------------------------------


alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias -- -="cd -"                  # Go to previous dir with -

alias tree="tree -A"
alias treed="tree -d"
alias tree1="tree -d -L 1"
alias tree2="tree -d -L 2"

# -------------------------------------------------------------------
# npm
# -------------------------------------------------------------------

alias ni="npm install"
alias nu="npm uninstall"
alias nup="npm update"
alias nri="rm -r node_modules && npm install"
alias ncd="npm-check -su"
alias npmListG='npm list -g --depth=0'

# -------------------------------------------------------------------
# Vagrant
# -------------------------------------------------------------------

alias v="vagrant global-status"
alias vup="vagrant up"
alias vhalt="vagrant halt"
alias vssh="vagrant ssh"
alias vreload="vagrant reload"
alias vrebuild="vagrant destroy --force && vagrant up"

# -------------------------------------------------------------------
# tmux
# -------------------------------------------------------------------

# Sessions

alias tmuxKillS="tmux kill-session -t"
alias tmuxRenS="tmux rename-session -t"
alias tmuxNewSess="tmux new-session -s"

alias tmuxAtt="tmux attach -t"
alias tmuxDet="tmux detach"

alias tmuxL="tmux ls"
