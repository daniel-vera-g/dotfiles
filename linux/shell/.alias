# -------------------------------------------------------------------
# Notebook & Journaling
# -------------------------------------------------------------------
alias did="vim + 'normal Go' + 'r!date' ~/Dropbox/did.txt"

# -------------------------------------------------------------------
# Git
# -------------------------------------------------------------------

alias g="git"

#---
# add
#---

alias gam='git add  . && git commit -m'
alias ga='git add'
alias gaa='git add .'
alias gap='git add -p'
alias gra='git remote add'


#---
# commit
#---

alias gco='g commit'
alias gca='gc -a'
alias gm='git commit -m'
alias gma='git commit -am'
alias gmamend='git commit --amend'
alias gc!='gc --amend'
alias gca!='gca --amend'

#---
# push, pull, rebase, fetch
#---

alias gp='git push'
alias ggpush='g push origin $(current_branch)'
alias ggpushf='ggpush --force-with-lease'
alias ggpusht='g push origin --tags'

alias gpu='git pull'

alias grb='g rebase'
alias grbi='grb --interactive'
alias grbc='grb --continue'
alias grba='grb --abort'


alias gfr='git fetch -p && git rebase'
alias gfe='g fetch'

#---
# log, status, diff, tag, clean & reset
#---


alias gl='git log'
alias gf='git reflog'
alias wow='git log --all --graph --decorate --oneline --simplify-by-decoration'
alias gcontr='git shortlog -sn'

alias gd='g diff'
alias gl='git diff --shortstat "@{0 day ago}'

alias gs='git status'
alias gd='git diff'

alias gta='git tag -a -m'
alias grr='git remote rm'
alias prune='git remote update --prune'

alias gre='g reset'
alias greh='gre --hard'
alias ggrh='greh origin/$(current_branch)'

#---
# branch 
#---

alias gb='git branch'
alias gba='g branch -a'


alias gc='git checkout'
alias gcl='git checkout -'
alias gcm='gc master'

alias gcl='git clone'
alias gmer='git merge'

alias gcp='g cherry-pick'
alias gcpa='gcp --abort'
alias gcpc='gcp --continue'

alias gsts='git stash show --text'
alias gsta='g stash'
alias gstp='gsta pop'
alias gstd='gsta drop'

# https://github.com/robbyrussell/oh-my-zsh
function current_branch() {
  ref=$(git symbolic-ref HEAD 2> /dev/null) || \
  ref=$(git rev-parse --short HEAD 2> /dev/null) || return
  echo ${ref#refs/heads/}
}

